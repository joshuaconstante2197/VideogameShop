@model System.Data.DataTable
@{
    ViewData["Title"] = "Index";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>Product Name</th>
        <th>Category</th>
        <th>Platoform</th>
        <th>Available Units</th>
        <th>Cost</th>
        <th>Price</th>
        <th>Condition</th>
        <th>Type</th>
       
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
    <tr class="productRows">
        @*starting at one to not show the id column*@

        <td >@Model.Rows[i][1]</td>
        <td >@Model.Rows[i][2]</td>
        <td >@Model.Rows[i][3]</td>
        <td class="productQty">@Model.Rows[i][4]</td>
        <td >@Model.Rows[i][5]</td>
        <td >@Model.Rows[i][6]</td>
        <td >@Model.Rows[i][7]</td>
        <td >@Model.Rows[i][8]</td>

        <td><a href="@Url.Action("Edit","Product",new {id = Model.Rows[i][0]})">Edit Product</a></td>
        <td><a href="@Url.Action("CreateFromProduct","Order", new {id = Model.Rows[i][0]})">Purchase Product</a></td>
    </tr>
    }
    
</table>
<button type="button" class="btn btn-success"  href="@Url.Action("Create","Product")">Add Product</button>
<script src="~/js/productChecker.js" asp-append-version="true"></script>
<hr />


