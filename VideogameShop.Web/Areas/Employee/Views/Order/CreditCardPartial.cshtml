@model VideogameShopLibrary.CVS_Models.Order

@{
    ViewData["Title"] = "Create";
}

<div class="form-group">
    <label asp-for="CreditCardName" class="control-label">Name on Credit Card</label>
    <input asp-for="CreditCardName" class="creditCardFields form-control"  />
    <span asp-validation-for="CreditCardName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="CreditCardNumber" class="control-label">Credit Card Number</label>
    <input asp-for="CreditCardNumber" id="creditCardInputField" class="creditCardFields form-control" />
    <span  asp-validation-for="CreditCardNumber" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ExpirationDate" class="control-label">Expiration Date</label>
    <input asp-for="ExpirationDate" class="creditCardFields form-control" />
    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="SecurityCode" class="control-label">CVV</label>
    <input asp-for="SecurityCode" class="creditCardFields form-control" />
    <span asp-validation-for="SecurityCode" class="text-danger"></span>
</div>

