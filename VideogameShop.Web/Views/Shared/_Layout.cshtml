<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Videogame Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", false)
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light box-shadow mb-3" >
            <div class="container">
                <a class="navbar-brand " asp-area="" asp-controller="Home" asp-action="Index">Videogame Shop</a>
                <button class="navbar-toggler btn-outline-success" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown text-black-50">
                            <a class="nav-link dropdown-toggle btn btn-outline-success border-0" href="#" id="navbarDropDownMenuProduct" role="button" data-toggle="dropdown" aria-haspopup="true">
                                Inventory Management
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropDownMenuProduct">
                                <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Index">Product</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Create">Add new product</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown ml-1">
                            <a class="nav-link dropdown-toggle btn btn-outline-success border-0" href="#" id="navbarDropDownMenuOrder" role="button" data-toggle="dropdown" aria-haspopup="true">
                                Order Management
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropDownMenuOrder">
                                <a class="dropdown-item btn " asp-area="" asp-controller="Order" asp-action="Index">Orders</a>
                                <a class="dropdown-item btn" asp-area="" asp-controller="Order" asp-action="Create">Add new order</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
        <div class="container" id="window">
                @RenderBody()
        </div>
    
    

    <footer class=" footer ">
        <div class="container">
            &copy; 2020 - Videogame Shop - JConstante 
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>



    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
