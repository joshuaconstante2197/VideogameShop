@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http

@{ string userName = string.Empty;
    string role = string.Empty;
}

@if (Context.Session.GetString("UserName") != null)
{
    userName = Context.Session.GetString("UserName");
    role = Context.Session.GetString("Role");
}
<ul class="navbar-nav">
    @if (!string.IsNullOrEmpty(userName))
    {
        <li class="nav-item">
            <span class="nav-link">Hello @ViewBag.UserName</span>
        </li>
        @if (role == "admin")
        {
            <li class="nav-item">
                <form class="form-inline" asp-action="ListRoles" asp-controller="Administration">
                    <button type="submit" class="nav-link btn btn-link text-dark">Roles Management</button>
                </form>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-action="Logout" asp-controller="Account">
                    <button type="submit" class="nav-link btn btn-link text-dark"> Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <form class="form-inline" asp-action="Logout" asp-controller="Account">
                    <button type="submit" class="nav-link btn btn-link text-dark"> Logout</button>
                </form>
            </li>

        }

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Login" asp-controller="Account">Login</a>
        </li>
    }
</ul>
