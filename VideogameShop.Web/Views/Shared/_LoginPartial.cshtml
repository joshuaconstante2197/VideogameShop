@using Microsoft.AspNetCore.Http



<ul class="navbar-nav">
    @if (Context.Session.GetString("UserName") != null)
    {
        <li class="nav-item">
            <span class="nav-link">Hello @Context.Session.GetString("UserName")</span>
        </li>
        @if (Context.Session.GetString("Role") == "admin")
        {
            <li class="nav-item">
                <a class="nav-link text-light" asp-action="ListRoles" asp-controller="Administration">Manage Roles</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-action="Logout" asp-controller="Account">
                    <button type="submit" class="nav-link btn btn-link text-light"> Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <form class="form-inline" asp-action="Logout" asp-controller="Account">
                    <button type="submit" class="nav-link btn btn-link text-light"> Logout</button>
                </form>
            </li>

        }

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-action="Login" asp-controller="Account">Login</a>
        </li>
    }
</ul>
